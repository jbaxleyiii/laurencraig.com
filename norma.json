{
  "name": "laurencraig.com",
  "tasks": {
    "bower": {
      "laurencraig/packages": {
        "junction": "NewSpring/junction"
      },
      "vendor": {
        "framework": "NewSpring/junction-framework"
      }
    },
    "sass": {
      "src": "_source/client/**/*",
      "dest": "laurencraig/client/",
      "lint": true,
      "comb": true
    },
    "javascript": {
      "src": "_source/**/*",
      "dest": "laurencraig"
    },
    "markup": {
      "src": "_source/client/templates/**/*",
      "dest": "laurencraig/client/templates",
      "minify": true
    },
    "copy": {
      "src": "_source/public/**/*",
      "dest": "laurencraig/public"
    },
    "settings": {
      "@extend": "copy",
      "src": "settings",
      "dest": "laurencraig/",
      "ext": [
        "json"
      ]
    },
    "private": {
      "@extend": "copy",
      "src": "_source/private/**/*",
      "dest": "laurencraig/private"
    },
    "meteor": {
      "dev": true,
      "src": "laurencraig",
      "settings": "settings.json",
      "build": {
        "dest": "build",
        "server": "localhost:3000"
      },
      "packages": [
        "meteor-platform",
        "accounts-base",
        "accounts-password",
        "reactive-var",
        "iron:router",
        "jamielob:transitions",
        "kaptron:minimongoid",
        "meteorhacks:fast-render",
        "meteorhacks:subs-manager",
        "cfs:standard-packages",
        "cfs:filesystem",
        "cfs:s3",
        "gfk:notifications",
        "mrt:moment",
        "multiply:iron-router-progress"
      ],
      "platforms": [
        "server",
        "browser",
        "ios"
      ]
    }
  },
  "test": {
    "before": "meteor run",
    "mocha-casperjs": {
      "src": "laurencraig/tests/**/*"
    },
    "after": "meteor close"
  },
  "server": {
    "port": "3000"
  }
}