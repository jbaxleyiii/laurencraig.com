{
  "name": "laurencraig.com",
  "tasks": {
    "bower": {
      "laurencraig/packages": {
        "junction": "NewSpring/junction"
      },
      "vendor": {
        "mixins": "normajs/holtzmann-mixins",
        "framework": "normajs/holtzmann-framework"
      }
    },
    "sass": {
      "src": "_source/client/stylesheets/**/*",
      "dest": "laurencraig/client/stylesheets",
      "lint": true,
      "comb": true
    },
    "javascript": {
      "src": "_source/**/*",
      "dest": "laurencraig"
    },
    "markup": {
      "src": "_source/client/templates/**/*",
      "dest": "laurencraig/client/templates",
      "minify": false
    },
    "copy": {
      "src": "_source/public/**/*",
      "dest": "laurencraig/public"
    },
    "private": {
      "@extend": "copy",
      "src": "_source/private/**/*",
      "dest": "laurencraig/private"
    },
    "meteor": {
      "dev": true,
      "src": "laurencraig",
      "build": {
        "dest": "build",
        "server": "localhost:3000"
      },
      "packages": [
        "meteor-platform",
        "newspring:junction",
        "ryw:blog",
        "accounts-password",
        "useraccounts:core",
        "useraccounts:unstyled",
        "iron:router",
        "mrt:bootstrap-3"
      ],
      "platforms": [
        "server",
        "browser",
        "ios"
      ]
    }
  },
  "test": {
    "before": "meteor run",
    "mocha-casperjs": {
      "src": "laurencraig/tests/**/*"
    },
    "after": "meteor close"
  },
  "server": {
    "port": "3000"
  }
}
